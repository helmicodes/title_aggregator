<h1>The Verge Articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>URL</th>
    <th>Published At</th>
  </tr>

  <tr>
    <% @articles.each do |article| %>
      <td><%= article.title %></td>
      <td><a href="<%= article.url %>" target="_blank" style="color: black;">Link</a></td>
      <td><%= article.published_at %></td>
    <% end %>
  </tr>
</table>